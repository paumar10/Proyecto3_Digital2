/* USER CODE BEGIN 0 */
//Función de transmisión de UART
void transmit_uart(char *string) {
	uint8_t len = strlen(string);
	HAL_UART_Transmit (&huart2, (uint8_t*)string, len, 200);
}

//Función para uso de printif con UART
int _write(int file, char *ptr, int len)
{
    HAL_UART_Transmit(&huart2, (uint8_t*)ptr, len, 100);
    return len;
}

//Guardar en la SD como
FRESULT log_data_to_sd(float temp)
{
    FRESULT res;
    char log_entry[50];

    //Se separan entero y decimal
    int entero = (int)temp;
    int decimal = (int)((temp - entero) * 100);
    if (decimal < 0) decimal = -decimal;

    //La línea que se imprime (sin floats porque no los soporta)
    int len = sprintf(log_entry, "T: %d.%02d C\n", entero, decimal);

    transmit_uart(log_entry);

    //Abrir archivo en modo append
    res = f_open(&fil, LOG_PATH, FA_OPEN_APPEND | FA_WRITE);
    if (res == FR_OK)
    {
        res = f_write(&fil, log_entry, len, (UINT*)&bytesWritten);

        if (res == FR_OK)
        {
            printf("SD: Datos guardados correctamente.\r\n");
        }
        else
        {
            printf("SD Error: WRITE. Code: %d\r\n", res);
        }

        f_close(&fil);
    }
    else
    {
        printf("SD Error: OPEN/APPEND. Code: %d\r\n", res);
    }

    return res;
}


/* USER CODE END 0 */

/**
  * @brief  The application entry point.
  * @retval int
  */
int main(void)
{

  /* USER CODE BEGIN 1 */

  /* USER CODE END 1 */

  /* MCU Configuration--------------------------------------------------------*/

  /* Reset of all peripherals, Initializes the Flash interface and the Systick. */
  HAL_Init();

  /* USER CODE BEGIN Init */

  /* USER CODE END Init */

  /* Configure the system clock */
  SystemClock_Config();

  /* USER CODE BEGIN SysInit */

  /* USER CODE END SysInit */

  /* Initialize all configured peripherals */
  MX_GPIO_Init();
  MX_SPI1_Init();
  MX_USART2_UART_Init();
  MX_USART3_UART_Init();
  MX_FATFS_Init();
  /* USER CODE BEGIN 2 */

  //Inicialización de la pantalla
  LCD_Init();

  //Juego de colores previo al fondo
  LCD_Clear(0xea59);//Rosado
  HAL_Delay(500);
  LCD_Clear(0x7119);//Morado
  HAL_Delay(500);
  LCD_Clear(0x3f59);//Turquesa
  HAL_Delay(500);

  //Se muestra el fondo
  LCD_Bitmap(0, 0, 320, 240, fondo);

  //Texto inicial
  LCD_Print("PROYECTO 3", 10, 60, 2, 0xFFFF, 0xea59);
  LCD_Print("Temperatura:", 10, 80, 2, 0xFFFF, 0xea59);



  //Mensaje de inicio en el monitor
    transmit_uart("Presione el boton para solicitar temperatura \r\n");

  //Espera los datos del ESP32/
     HAL_UART_Receive_IT(&huart3, (uint8_t*)&rx_buffer_esp32[rx_index_esp32], 1);

     //Inicialización y montaje de la SD
          fres = f_mount(&fs, "0:", 1);
          if (fres == FR_OK)
          {
              printf("SD: Montada correctamente.\r\n");
          }
          else if (fres == FR_NO_FILESYSTEM)
          {
              printf("SD: Error de montaje. Requiere formato.\r\n");
          }
          else
          {
              printf("SD: Error de montaje. Code: %d\r\n", fres);
          }

  /* USER CODE END 2 */

  /* Infinite loop */
  /* USER CODE BEGIN WHILE */
	while (1) {
		//Variable para almacenar la temperatura
		float temp = 0.0f;
		//Buffer para almacenar la temperatura
		char buffer2[50];
		//Escaneo del dato recibido por botón 1
		if (nuevo_dato){
			//Se cambia el flanco
			nuevo_dato = 0;
			//Se reconstruye el dato de temperatura, asumiendo que el ESP lo envía en el mismo orden que el STM
			memcpy(&temp, rx_buffer_esp32, sizeof(float));
		     //Actualización para boton 2
		     ultima_temperatura = temp;
			//Se convierte a string con 2 decimales para imprimir (específicamente para la TFT)
		     int entero = (int)temp;
		     int decimal = (int)((temp - entero) * 100);
		     if (decimal < 0) decimal = -decimal; //Decimal positivo
		     //Se prepara y muestra la temperatura en la TFT
		     sprintf(buffer2, "%d.%02d C ", entero, decimal);
		     LCD_Print(buffer2, 10, 100, 2, 0xFFFF, 0xea59);
		     //Se muestran los datos en el monitor
		     sprintf(buffer2, "Temperatura: %d.%02d °C\r\n", entero, decimal);
		     transmit_uart(buffer2);
		     //Se limpia el buffer
		     memset(rx_buffer_esp32, 0, 4);
		}
		//Escaneo de dato recibido por botón 2
		if(sd_guardar){
			sd_guardar=0;
			if(fres == FR_OK){
				//Se guarda la última temperatura detectada
				log_data_to_sd(ultima_temperatura);
			}
			else{
				printf("No se puede guardar \r\n");
			}
		}

    /* USER CODE END WHILE */

    /* USER CODE BEGIN 3 */
	}
  /* USER CODE END 3 */
}

/**
  * @brief System Clock Configuration
  * @retval None
  */
void SystemClock_Config(void)
{
  RCC_OscInitTypeDef RCC_OscInitStruct = {0};
  RCC_ClkInitTypeDef RCC_ClkInitStruct = {0};

  /** Configure the main internal regulator output voltage
  */
  __HAL_RCC_PWR_CLK_ENABLE();
  __HAL_PWR_VOLTAGESCALING_CONFIG(PWR_REGULATOR_VOLTAGE_SCALE3);

  /** Initializes the RCC Oscillators according to the specified parameters
  * in the RCC_OscInitTypeDef structure.
  */
  RCC_OscInitStruct.OscillatorType = RCC_OSCILLATORTYPE_HSI;
  RCC_OscInitStruct.HSIState = RCC_HSI_ON;
  RCC_OscInitStruct.HSICalibrationValue = RCC_HSICALIBRATION_DEFAULT;
  RCC_OscInitStruct.PLL.PLLState = RCC_PLL_ON;
  RCC_OscInitStruct.PLL.PLLSource = RCC_PLLSOURCE_HSI;
  RCC_OscInitStruct.PLL.PLLM = 8;
  RCC_OscInitStruct.PLL.PLLN = 80;
  RCC_OscInitStruct.PLL.PLLP = RCC_PLLP_DIV2;
  RCC_OscInitStruct.PLL.PLLQ = 2;
  RCC_OscInitStruct.PLL.PLLR = 2;
  if (HAL_RCC_OscConfig(&RCC_OscInitStruct) != HAL_OK)
  {
    Error_Handler();
  }

  /** Initializes the CPU, AHB and APB buses clocks
  */
  RCC_ClkInitStruct.ClockType = RCC_CLOCKTYPE_HCLK|RCC_CLOCKTYPE_SYSCLK
                              |RCC_CLOCKTYPE_PCLK1|RCC_CLOCKTYPE_PCLK2;
  RCC_ClkInitStruct.SYSCLKSource = RCC_SYSCLKSOURCE_PLLCLK;
  RCC_ClkInitStruct.AHBCLKDivider = RCC_SYSCLK_DIV1;
  RCC_ClkInitStruct.APB1CLKDivider = RCC_HCLK_DIV2;
  RCC_ClkInitStruct.APB2CLKDivider = RCC_HCLK_DIV1;

  if (HAL_RCC_ClockConfig(&RCC_ClkInitStruct, FLASH_LATENCY_2) != HAL_OK)
  {
    Error_Handler();
  }
}

