//Comando que envía al ESP32
uint8_t solicitud = 'R';
uint8_t color = 'S';
//Buffer para temperatura
uint8_t rx_buffer_esp32[4];

//Definición explícita del botón 1 (sino temp=0 siempre)
#define bot1_Pin GPIO_PIN_8
#define bot1_GPIO_Port GPIOC

//Definición explícita del botón 2
#define bot2_Pin GPIO_PIN_6
#define bot2_GPIO_Port GPIOC

//Comunicación con ESP32
volatile uint8_t rx_index_esp32 =0;
volatile uint8_t nuevo_dato =0;
volatile uint8_t esperando_respuesta = 0;

//Antirrebote para los botones
uint32_t ultimo_bot1=0;
uint32_t ultimo_bot2=0;
uint32_t delay_bot=50;

//SD
SPI_HandleTypeDef hspi1;
FATFS fs;
FATFS*pfs;
FIL fil;
FRESULT fres;
DWORD fre_clust;
uint32_t bytesWritten;
char buffer[100];

//Variables para SD
#define LOG_PATH "TEMP_LOG.TXT"
#define PATH "0:/"FILE_NAME
float ultima_temperatura = 0.0f;
volatile uint8_t sd_guardar = 0;

